---
interface Props {
  title: string
  description: string
  src: string
}

const {title, description, src} = Astro.props;
---

<div class="h-32 flex items-center border">
    <img src={src} class="h-full aspect-square" alt="サムネイル"/>
    <div class="flex flex-col gap-2 p-5">
        <h2 class="text-lg font-bold">
          {title}
        </h2>
        <p class="text-sm line-clamp-2">
          {description}
        </p>
    </div>
</div>
